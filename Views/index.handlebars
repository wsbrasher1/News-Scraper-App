<div>
    <h1 class="card z-depth-3 center-align">Read the Latest from </h1>
    <div class="row">
        <div class="col s3"></div>
        <h5 class="card z-depth-3 center-align col s6">Click 'Scrape' to get the latest articles</h5>
    </div>
</div>

{{#each article}}
<div class="card mb-3" data-story-id="{{this._id}}">
    <div class="row">
        {{#if this.image}}
        <div class="col-md-3">
            <img src="{{this.image}}" class="card-img" alt="Article Image">
        </div>
        {{/if}}
            <div class="col-md-9">
                <div class="card-panel">
                    <a href="{{link}}"class="text-body" target="_blank"></a><h4>{{this.title}}</h4>
                    <p class="card-text">{{this.summary}}</p>
                    <a href="#" class="btn btn-danger saveArticle">Save Article</a>
                    <a href="#" class="btn btn-info saveNotes">Notes</a>
                </div>
            </div>
    </div>
</div>
{{/each}}